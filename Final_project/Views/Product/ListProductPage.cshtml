@model Final_project.Models.ProductCategoryViewModel
@{
    ViewBag.Title = "ListProduct";
}

<section id="advertisement">
    <div class="container">
        <img src="~/assets/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Category</h2>
                    <div class="panel-group category-products" id="accordian">
                        @if (Model.Categories != null && Model.Categories.Any())
                        {
                            foreach (var category in Model.Categories)
                            {
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a href="javascript:void(0);" class="category-link" data-category="@category.CategoryName">
                                                <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                                                @category.CategoryName <!-- Hiển thị tên category -->
                                            </a>
                                        </h4>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p>No categories available.</p>
                        }
                    </div>
                    <div class="brands_products">
                        <!--brands_products-->
                        <h2>Brands</h2>
                        <div class="brands-name">
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href=""> <span class="pull-right">(50)</span>Acne</a></li>
                                <li><a href=""> <span class="pull-right">(56)</span>Grüne Erde</a></li>
                                <li><a href=""> <span class="pull-right">(27)</span>Albiro</a></li>
                                <li><a href=""> <span class="pull-right">(32)</span>Ronhill</a></li>
                                <li><a href=""> <span class="pull-right">(5)</span>Oddmolly</a></li>
                                <li><a href=""> <span class="pull-right">(9)</span>Boudestijn</a></li>
                                <li><a href=""> <span class="pull-right">(4)</span>Rösch creative culture</a></li>
                            </ul>
                        </div>
                    </div><!--/brands_products-->
                    <!--price-range-->
                    <form action="@Url.Action("FilterByPrice", "Product")" method="get">
                        <div class="price-range">
                            <h2>Price Range</h2>
                            <div class="well">
                                <input type="hidden" id="minPrice" name="minPrice" value="@ViewBag.MinPrice" />
                                <input type="hidden" id="maxPrice" name="maxPrice" value="@ViewBag.MaxPrice" />
                                <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[0,200]" id="sl2"><br />
                                <b>$ <span id="minPriceLabel">0</span></b> <b class="pull-right">$ <span id="maxPriceLabel">600</span></b>
                            </div>
                            <button type="submit" class="btn btn-primary">Filter</button>
                        </div>
                    </form>
                    <!--/price-range-->

                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="~/assets/images/home/shipping.jpg" alt="" />
                    </div><!--/shipping-->

                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Features Items</h2>
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img src="~/assets/images/shop/@product.ImageUrl" alt="@product.Name" />
                                        <h2>@product.Price</h2>
                                        <p>@product.Name</p>
                                        <a href="javascript:void(0);" class="btn btn-default add-to-cart" data-product-id="@product.ProductID">
                                            <i class="fa fa-shopping-cart"></i> Add to cart
                                        </a>
                                    </div>
                                    <div class="product-overlay">
                                        <div class="overlay-content">
                                            <h2>@product.Price$</h2>
                                            <p>@product.Name</p>
                                            <a href="javascript:void(0);" class="btn btn-default add-to-cart" data-product-id="@product.ProductID">
                                                <i class="fa fa-shopping-cart"></i> Add to cart
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="choose">
                                    <ul class="nav nav-pills nav-justified">
                                        <li>
                                            <a href="javascript:void(0);" class="add-to-wishlist" data-product-id="@product.ProductID">
                                                <i class="fa fa-plus-square"></i> Add to wishlist
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Details", "Product", new { id = product.ProductID })">
                                                <i class="fa fa-plus-square"></i> View Details
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    }
                    <!-- Pagination -->
                    <!-- Pagination -->
                    <ul class="pagination">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="@(Model.CurrentPage == i ? "active" : "")">
                                <a href="@Url.Action("FilterByPrice", new { minPrice = Model.MinPrice, maxPrice = Model.MaxPrice, page = i })">@i</a>
                            </li>
                        }

                        <!-- Nút Previous -->
                        @if (Model.CurrentPage > 1)
                        {
                            <li>
                                <a href="@Url.Action("FilterByPrice", new { minPrice = Model.MinPrice, maxPrice = Model.MaxPrice, page = Model.CurrentPage - 1 })">&laquo;</a>
                            </li>
                        }

                        <!-- Nút Next -->
                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li>
                                <a href="@Url.Action("FilterByPrice", new { minPrice = Model.MinPrice, maxPrice = Model.MaxPrice, page = Model.CurrentPage + 1 })">&raquo;</a>
                            </li>
                        }
                    </ul>

                </div><!--features_items-->
            </div>
        </div>
    </div>
</section>

