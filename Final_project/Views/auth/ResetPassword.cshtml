<form action="@Url.Action("ResetPassword", "auth")" method="post" class="reset-password-form">
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="reset-password-alert-danger">@ViewBag.ErrorMessage</div>
    }

    <!-- Truyền token dưới dạng hidden input -->
    <input type="hidden" name="token" value="@ViewBag.Token" />

    <div class="reset-password-group">
        <label for="newPassword">New Password</label>
        <input type="password" name="newPassword" class="reset-password-input" required />
    </div>

    <div class="reset-password-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" name="confirmPassword" class="reset-password-input" required />
    </div>

    <button type="submit" class="reset-password-btn">Reset Password</button>
</form>
